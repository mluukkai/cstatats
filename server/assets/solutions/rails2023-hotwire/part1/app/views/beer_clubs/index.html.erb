<h1>Beer clubs</h1>

<div id="beer_clubs">
  <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= link_to "Name", beer_clubs_path(order: "name")%></th>
      <th><%= link_to "Founded", beer_clubs_path(order: "founded")%></th>
      <th><%= link_to "City", beer_clubs_path(order: "city")%></th>
    </tr>
  </thead>
  <tbody>
    <% @beer_clubs.each do |club| %>
      <tr>
        <td><%= link_to club.name, club %></td>
        <td><%= club.founded %></td>
        <td><%= club.city %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<%= link_to "New beer club", new_beer_club_path %>
